<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent" android:layout_height="0sp" android:layout_weight="6">
            <RelativeLayout
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:id="@+id/sky" android:orientation="horizontal"
                android:background="@drawable/back_rain">
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/score" android:text=" score: " android:textColor="@color/blue"
                android:background="@color/trans_white" android:layout_alignParentRight="true"
                android:padding="5sp" android:layout_margin="5sp" android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/time" android:text=" time: " android:textColor="@color/blue"
                android:background="@color/trans_white" android:layout_toLeftOf="@+id/score"
                android:padding="5sp" android:layout_margin="5sp" android:textSize="20sp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent" android:layout_height="0sp"
            android:layout_weight="1" android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0sp" android:layout_height="match_parent"
                android:layout_weight="3" android:id="@+id/numbersContainer" android:gravity="center">
                <Button
                    android:layout_width="40sp" android:layout_height="40sp" android:textSize="15sp"
                    android:id="@+id/one" android:layout_alignParentLeft="true"
                    android:text="1" />
                <Button
                    android:layout_width="40sp" android:layout_height="40sp" android:textSize="15sp"
                    android:id="@+id/two" android:layout_toRightOf="@+id/one" android:layout_alignParentTop="true"
                    android:text="2" />
                <Button
                    android:layout_width="40sp" android:layout_height="40sp" android:textSize="15sp"
                    android:id="@+id/three" android:layout_toRightOf="@+id/two"
                    android:layout_alignParentTop="true" android:text="3" />
                <Button
                    android:layout_width="40sp" android:layout_height="40sp" android:textSize="15sp"
                    android:id="@+id/four" android:layout_toRightOf="@+id/three"
                    android:layout_alignParentTop="true" android:text="4" />
                <Button
                    android:layout_width="40sp" android:layout_height="40sp" android:textSize="15sp"
                    android:id="@+id/five"  android:layout_toRightOf="@+id/four"
                    android:text="5"/>
                <Button
                    android:layout_width="40sp" android:layout_height="40sp" android:textSize="15sp"
                    android:id="@+id/six" android:layout_below="@+id/one" android:text="6"/>
                <Button
                    android:layout_width="40sp" android:layout_height="40sp" android:textSize="15sp"
                    android:id="@+id/seven" android:layout_below="@+id/two"
                    android:layout_toRightOf="@+id/six" android:text="7"/>
                <Button
                    android:layout_width="40sp" android:layout_height="40sp" android:textSize="15sp"
                    android:id="@+id/eight" android:layout_below="@+id/three" android:text="8"
                    android:layout_toRightOf="@+id/seven" />
                <Button
                    android:layout_width="40sp" android:layout_height="40sp" android:textSize="15sp"
                    android:id="@+id/nine" android:layout_below="@+id/four" android:text="9"
                    android:layout_toRightOf="@+id/eight" />
                <Button
                    android:layout_width="40sp" android:layout_height="40sp" android:textSize="15sp"
                    android:id="@+id/zero" android:layout_below="@+id/five" android:text="0"
                    android:layout_toRightOf="@+id/nine" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0sp" android:layout_height="match_parent"
                android:layout_weight="2" android:id="@+id/otherContainer" android:gravity="center">
                <EditText
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:id="@+id/edtAnswer" android:textSize="15sp"/>
                <Button
                    android:layout_width="50sp" android:layout_height="wrap_content"
                    android:id="@+id/btnClear" android:text="C" android:layout_below="@+id/edtAnswer"
                    android:layout_alignParentLeft="true" android:textSize="15sp"/>
                <Button
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:id="@+id/btnAnswer" android:text="ANSWER"
                    android:layout_below="@+id/edtAnswer" android:layout_toRightOf="@+id/btnClear"
                    android:layout_alignParentRight="true" android:textSize="15sp"/>
            </RelativeLayout>
        </LinearLayout>
</LinearLayout>